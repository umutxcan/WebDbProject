FROM harbor.umutcan.info/myproject/python-base:3.11


RUN apt-get update && \
    apt-get install -y gcc build-essential libpq-dev libpq5 && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip uninstall -y psycopg2-binary psycopg2 || true && \
    pip install --no-cache-dir -r requirements.txt

COPY app.py .

CMD ["python", "app.py"]

